# AWS CDK Link Shortener - Environment Variables

# AWS Configuration
AWS_REGION=us-east-1
AWS_PROFILE=default

# Environment
ENVIRONMENT=dev
NODE_ENV=development

# DynamoDB Tables (for local development)
LINKS_TABLE_NAME=LinkShortener-Links-dev
ANALYTICS_TABLE_NAME=LinkShortener-Analytics-dev

# Domain Configuration
CUSTOM_DOMAIN=dev-links.yourdomain.com
API_DOMAIN=your-api-id.execute-api.us-east-1.amazonaws.com

# Security
IP_SALT=change-this-in-production-dev

# Features
ENABLE_METADATA_FETCH=true
MAX_URL_LENGTH=2048

# Local Development
PORT=3000

# DynamoDB Local (for development)
DYNAMODB_LOCAL_ENDPOINT=http://localhost:8000
DYNAMODB_LOCAL_ACCESS_KEY_ID=local
DYNAMODB_LOCAL_SECRET_ACCESS_KEY=local

# Monitoring (optional)
ENABLE_XRAY=true
ENABLE_DETAILED_METRICS=true

# Alerts (production only)
ALARM_EMAIL=alerts@yourdomain.com

# API Keys (production only)
# API_KEY_ID=your-api-key-id

# External Services (optional)
# CLEARBIT_API_KEY=your-clearbit-key
# MAXMIND_LICENSE_KEY=your-maxmind-key